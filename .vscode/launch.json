{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with #.in.txt",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["<", "${fileDirname}/${input:inputFile}.in.txt"]
    }
  ],
  "inputs": [
    {
      "id": "inputFile",
      "type": "promptString",
      "description": "请输入数字，以选择对应的输入文件(例如 1.in.txt):"
    }
  ]
}
